# Production Environment Configuration for Autonomous Software Foundry - Vercel Deployment

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=false

# Enhanced Descope Authentication (Production Values)
DESCOPE_PROJECT_ID=P31WC6A6Vybbt7N5NhnH4dZLQgXY
DESCOPE_MANAGEMENT_KEY=your_production_management_key_here
DESCOPE_CLIENT_ID=your_production_client_id_here
DESCOPE_CLIENT_SECRET=your_production_client_secret_here

# JWT Configuration
JWT_ALGORITHM=RS256
JWT_VERIFY_EXPIRATION=true
JWT_REQUIRE_CLAIMS=exp,iat,sub,aud

# Security Settings
TOKEN_CACHE_TTL=3600
MAX_TOKEN_AGE_HOURS=24
ENABLE_TOKEN_REFRESH=true

# LLM Configuration
OPENAI_API_KEY=your_production_openai_key_here
ANTHROPIC_API_KEY=your_production_anthropic_key_here
DEFAULT_LLM_PROVIDER=openai

# File Management (Vercel has limited filesystem access)
OUTPUT_BASE_PATH=/tmp/outputs
MAX_PROJECT_SIZE_MB=25

# Security
MAX_GENERATION_TIME_SECONDS=300
ALLOWED_FILE_EXTENSIONS=.py,.js,.ts,.html,.css,.json,.md,.yml,.yaml

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=INFO

# External Database (Supabase/PlanetScale/Neon recommended for Vercel)
DATABASE_URL=postgresql://user:password@your-db-host:5432/foundry

# External Redis Cache (Upstash recommended for Vercel)
REDIS_URL=redis://user:password@your-redis-host:6379

# Cequence AI Gateway Configuration
CEQUENCE_GATEWAY_URL=https://your-cequence-gateway.com
CEQUENCE_GATEWAY_ID=your_gateway_id_here
CEQUENCE_API_KEY=your_cequence_api_key_here
CEQUENCE_ANALYTICS_BUFFER_SIZE=100
CEQUENCE_ENABLE_SECURITY_MONITORING=true
CEQUENCE_ENABLE_PERFORMANCE_MONITORING=true

# Deployment Configuration
ENVIRONMENT=production
CORS_ORIGINS=https://your-domain.vercel.app,https://your-custom-domain.com
