# Development Environment Configuration for Autonomous Software Foundry

# Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=8000
DEBUG=true

# Enhanced Descope Authentication (Development Values)
DESCOPE_PROJECT_ID=P31WC6A6Vybbt7N5NhnH4dZLQgXY
DESCOPE_MANAGEMENT_KEY=your_development_management_key_here
DESCOPE_CLIENT_ID=your_development_client_id_here
DESCOPE_CLIENT_SECRET=your_development_client_secret_here

# JWT Configuration
JWT_ALGORITHM=RS256
JWT_VERIFY_EXPIRATION=true
JWT_REQUIRE_CLAIMS=exp,iat,sub,aud

# Security Settings
TOKEN_CACHE_TTL=1800
MAX_TOKEN_AGE_HOURS=12
ENABLE_TOKEN_REFRESH=true

# LLM Configuration
OPENAI_API_KEY=your_development_openai_key_here
ANTHROPIC_API_KEY=your_development_anthropic_key_here
DEFAULT_LLM_PROVIDER=openai

# File Management
OUTPUT_BASE_PATH=./outputs
MAX_PROJECT_SIZE_MB=100

# Security
MAX_GENERATION_TIME_SECONDS=300
ALLOWED_FILE_EXTENSIONS=.py,.js,.ts,.html,.css,.json,.md,.yml,.yaml

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=DEBUG

# Development Database (SQLite for local dev)
DATABASE_URL=sqlite:///./dev.db

# Cequence AI Gateway Configuration (Optional for Development)
CEQUENCE_GATEWAY_URL=https://dev-cequence-gateway.com
CEQUENCE_GATEWAY_ID=dev_gateway_id_here
CEQUENCE_API_KEY=dev_cequence_api_key_here
CEQUENCE_ANALYTICS_BUFFER_SIZE=50
CEQUENCE_ENABLE_SECURITY_MONITORING=true
CEQUENCE_ENABLE_PERFORMANCE_MONITORING=true

# Development Configuration
ENVIRONMENT=development
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000

# Demo Mode (For testing without external services)
ENABLE_DEMO_MODE=true
DEMO_USER_ID=demo_user
DEMO_CLIENT_ID=demo_client