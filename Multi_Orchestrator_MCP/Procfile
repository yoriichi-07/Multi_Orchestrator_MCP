# Procfile
# Process definitions for Fly.io buildpack deployment

# Main web process - runs the FastAPI MCP server
web: python -m uvicorn src.main:app --host 0.0.0.0 --port $PORT --workers 1

# Optional: Health check process
# health: python -c "import requests; requests.get('http://localhost:8080/health')"

# Optional: Background worker process for healing system
# worker: python -m src.healing.healing_loop

# Optional: Metrics exporter process
# metrics: python -m src.monitoring.metrics_server